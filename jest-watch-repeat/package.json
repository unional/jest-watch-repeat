{
  "name": "jest-watch-repeat",
  "version": "3.0.1",
  "description": "Repeat test suite multiple times",
  "keywords": [
    "jest",
    "jest-watch-plugins",
    "testing",
    "tooling"
  ],
  "homepage": "https://github.com/unional/jest-watch-repeat",
  "bugs": {
    "url": "https://github.com/unional/jest-watch-repeat/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/jest-watch-repeat.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "clean": "rimraf dist",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "pnpm clean && pnpm nuke:local",
    "nuke:local": "rimraf node_modules",
    "test": "jest",
    "verify": "run-p verify:build lint coverage",
    "verify:build": "npm-run-all clean build --p depcheck",
    "w": "jest --watch"
  },
  "dependencies": {
    "ansi-escapes": "^4.3.2",
    "chalk": "^4.1.2",
    "jest-watcher": "^30.0.0",
    "unpartial": "^1.0.5"
  },
  "devDependencies": {
    "@repobuddy/jest": "^5.0.0",
    "@types/ansi-escapes": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "delay": "^7.0.0",
    "depcheck": "^1.4.3",
    "jest": "^30.0.0",
    "jest-esm-transformer-2": "^1.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^3.0.0",
    "memory-streams": "^0.1.3",
    "npm-run-all2": "^8.0.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "jest": ">=29"
  }
}
