{
  "name": "jest-watch-repeat",
  "version": "0.0.0-development",
  "description": "Repeat test suite multiple times",
  "keywords": [
    "jest",
    "jest-watch-plugins",
    "testing",
    "tooling"
  ],
  "homepage": "https://github.com/unional/jest-watch-repeat",
  "bugs": {
    "url": "https://github.com/unional/jest-watch-repeat/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/jest-watch-repeat.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "coverage": "jest --coverage",
    "dc": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i jest && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "test": "yarn build && jest",
    "verify": "yarn lint && yarn build && yarn coverage && yarn dependency-check",
    "verify:ci": "yarn lint && yarn build && jest --coverage --config jest.config.ci.json --maxWorkers=2 && yarn dependency-check",
    "watch": "yarn build && jest --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "ansi-escapes": "^4.2.0",
    "chalk": "^2.4.2",
    "jest-watcher": "^24.8.0",
    "unpartial": "^0.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/ansi-escapes": "^4.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "assertron": "^7.1.2",
    "codecov": "^3.5.0",
    "commitlint-circle": "^1.0.0",
    "dependency-check": "^3.4.1",
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-audio-reporter": "^2.2.1",
    "jest-junit": "^6.4.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^1.0.2",
    "memory-streams": "^0.1.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-unional": "^0.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "jest": ">=23"
  }
}
